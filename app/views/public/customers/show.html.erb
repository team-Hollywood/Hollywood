<h4>マイページ</h4>

<h４>登録情報</h４>
<%= link_to "編集する", edit_public_customers_path, class: "btn btn-info" %>
<%= link_to "パスワードを変更する", "#", class: "btn btn-info" %>

<table class="table">
	<tbody>
		<tr>
			<th>氏名</th>
			<th><%= current_customer.lastname %>	<%= current_customer.firstname %></th>
		</tr>

		<tr>
			<th>カナ</th>
			<th><%= current_customer.lastname_kana %>	<%= current_customer.firstname_kana %></th>
		</tr>

		<tr>
			<th>郵便番号</th>
			<th><%= current_customer.zip_code %></th>
		</tr>

		<tr>
			<th>住所</th>
			<th><%= current_customer.address %></th>
		</tr>

		<tr>
			<th>電話番号</th>
			<th><%= current_customer.phone %></th>
		</tr>

		<tr>
			<th>メールアドレス</th>
			<th><%= current_customer.email %></th>
		</tr>
	</tbody>
</table>

<h4>配送先	<%= link_to "一覧を見る", public_addresses_path, class: "btn btn-info" %></h4>
<h4>注文履歴	<%= link_to "一覧を見る", public_orders_path, class: "btn btn-info" %></h4>
