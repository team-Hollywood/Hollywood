<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <div class="serch-bar">
       <table class="table table-bordered">
          <thead>
            <tr>
              <th><div class="text-center">ジャンル検索</div></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre|%>
            <tr>
              <td><%= link_to public_products_path(@products, genre_id: genre.id) do %>
                <%= genre.name %>
              </td>
            <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br>
    <br>
    <br>

    <div class="col-xs-10">
      <div class="product-detail">
        <%= attachment_image_tag(@product, :image, size: "300x200", fallback: "no_image.jpg") %>
        <%= @product.name %>
        <%= @product.discription%>
        ￥<%= @product.tax_excluded_price%>(税込み)
        <div class="text-center">
        <%= form_with(model: @cart_item, url: public_cart_items_path) do |f|%>
          <%= f.hidden_field :product_id, :value => params[:id] %>
          <%= f.label :amount, "数量"%>
          <%= f.select :amount, [1,2,3,4,5,6,7,8,9]%>
          <%= f.submit "カートに入れる", class: "btn btn-primary"%>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
