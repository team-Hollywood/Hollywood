<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="serch-bar">
        ジャンル検索
        <br><br>
        <% @genres.each do |genre|%>
          <div class="one-genre">
            <%= link_to public_products_path(@products, genre_id: genre.id) do %>
              <%= genre.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <br>
    <br>
    <br>

    <div class="col-xs-9">
      <div class="product-detail">
        <%= attachment_image_tag(@product, :image, :fill, 200, 200, fallback: "no_image.jpg") %>
        <%= @product.name %>
        <%= @product.discription%>
        ￥<%= @product.tax_excluded_price%>(税込み)
        <%= form_for public_cart_items_path do |f|%>
          <%= f.label :amount, "数量"%>
          <%= f.select :amount, [1,2,3,4,5,6,7,8,9]%>
          <%= f.submit "カートに入れる", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
