<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <div class="serch-bar">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><div class="text-center">ジャンル検索</div></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre|%>
            <tr>
              <td><%= link_to public_products_path(@products, genre_id: genre.id) do %>
                <%= genre.name %>
              </td>
            <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-xs-10">
      <div class="products-index">
        <% if params[:genre_id]%>
          <%= Genre.find(params[:genre_id]).name %>一覧(全<%= @products.count%>件)
        <% else%>
          商品一覧(全<%= @products.count%>件)
        <% end%>
        <br><br>

        <div class="container pull-left">
        <% @products.each do |product|%>
            <div class="product-box">
              <%= link_to(public_product_path(product.id)) do %>
                  <%= attachment_image_tag(product, :image, size: "150x100", fallback: "no_image.jpg") %>
              <% end %>
              <%= product.name %>
              ￥<%= product.tax_excluded_price%>
            </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
