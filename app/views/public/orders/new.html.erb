<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文情報入力</h2><br><br>
      <%= form_with(model: @order, local: true, url: public_orders_confirm_path) do |f|%>
        <h3>支払い方法</h3>
        <label><%= radio_button_tag("payment_method", "0") %></label>
        <%= f.label :クレジットカード%><br>
        <label><%= radio_button_tag("payment_method", "1") %></label>
        <%= f.label :銀行振込　%><br>

        <h3>お届け先</h3>

          <%= radio_button_tag("address","1")%>
          <%= f.label "ご自身の住所"%><br>
          <%= current_customer.address%>
          
          <br><br>
          <%= radio_button_tag("address","2")%>
          <%= f.label "登録済住所から選択"%><br>

          <%= select_tag :registered_address_id, options_from_collection_for_select(@address, :id, :address), include_blank: true%>

          <br><br>
          <%= radio_button_tag("address","3")%>
          <%= f.label "新しいお届け先"%><br>
          <table>
            <tr>
              <td>郵便番号(ハイフンなし)　</td>
              <td><%= f.text_field :zip_code%></td>
            </tr>
            <tr>
              <td>住所　</td>
              <td><%= f.text_field :address%></td>
            </tr>
            <tr>
              <td>宛名　</td>
              <td><%= f.text_field :name%></td>
            </tr>
          </table>

          <%= f.submit "確認画面へ進む", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
