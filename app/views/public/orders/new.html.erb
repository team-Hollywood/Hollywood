
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文情報入力</h2><br><br>
      <%= form_with(model:@order, url:public_orders_confirm_path) do |f|%>
        <h3>支払い方法</h3>
        <%= f.radio_button :payment_method, :クレジットカード, label: "クレジットカード" %>
        <%= f.label :クレジットカード%><br>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :銀行振込　%><br>

        <h3>お届け先</h3>

          <%= radio_button_tag("self_address", "ご自身の住所")%>
          <%= label_tag("ご自身の住所")%><br>
          <%= current_customer.address%>

          <br><br>
          <%= radio_button_tag("registerdd_address", "登録済み住所から選択")%>
          <%= label_tag("登録済み住所から選択")%><br>
          <%= f.collection_select :address, Address.where(customer_id: current_customer.id), :address, :address, include_blank: true, disabled: true%>

          <br><br>
          <%= radio_button_tag("crate_address", "新しいお届け先")%>
          <%= label_tag("新しいお届け先")%><br>
          <table>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :zip_code%></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address%></td>
            </tr>
            <tr>
              <td>宛名</td>
              <td><%= f.text_field :name%></td>
            </tr>
          </table>
      <% end %>
    </div>
  </div>
</div>
