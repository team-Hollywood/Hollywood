<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2>配送先編集</h2>
			<br><br>
			<%= form_for(@address, url:public_address_path) do |f| %>
			<table>
				<tr>
					<td><%= f.label :郵便番号（ハイフンなし） %></td>
					<td><%= f.text_field :zip_code, autofocus: true, autocomplete: "postal-code" %></td>
				</tr>
				<tr>
					<td><%= f.label :住所 %></td>
					<td><%= f.text_field :address, autofocus: true, autocomplete: "street-address", size:"70" %></td>
				</tr>
				<tr>
					<td><%= f.label :宛名 %></td>
					<td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
				</tr>
			</table>
			<div class="text-right">
				<%= f.submit "編集する",class: "btn btn-primary" %>
			</div>
			<% end %>
		</div>
	</div>
</div>