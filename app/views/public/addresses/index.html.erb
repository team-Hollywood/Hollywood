<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2>配送先登録</h2>
			<br><br>
			<%= form_for(@address, url:public_addresses_path) do |f| %>
			<table>
				<tr>
					<td><%= f.label :郵便番号（ハイフンなし） %></td>
					<td><%= f.text_field :zip_code, autofocus: true, autocomplete: "postal-code" %></td>
				</tr>
				<tr>
					<td><%= f.label :住所 %></td>
					<td><%= f.text_field :address, autofocus: true, autocomplete: "street-address", size:"70" %></td>
				</tr>
				<tr>
					<td><%= f.label :宛名 %></td>
					<td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
				</tr>
			</table>
			<div class="text-right">
				<%= f.submit "登録する",class: "btn btn-success" %>
			</div>
			<% end %>
		</div>
	</div>
	<br><br>

	<div class="row">
		<div class="col-xs-9">
			<table class="table table-bordered">
				<thead>
	    			<tr>
						<th>郵便番号</th>
	     				<th>住所</th>
	     				<th>宛名</th>
	      				<th colspan="3"></th>
	    			</tr>
	  			</thead>
				<tbody>
	    			<% @addresses.each do |address| %>
	      				<tr>
	        				<td><%= address.zip_code %></td>
	        				<td><%= address.address %></td>
	        				<td><%= address.name %></td>
	        				<td><%= link_to "編集する", edit_public_address_path(address), class: "btn btn-primary" %>
	        					<%= link_to "削除する", public_address_path(address), method: :delete, data:{confirm: "本当に削除しますか？"},class: "btn btn-danger" %>
	        				</td>
	        			</tr>
	    			<% end %>
	  			</tbody>
			</table>
		</div>
	</div>
</div>