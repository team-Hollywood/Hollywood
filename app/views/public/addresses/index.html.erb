<div class="container">
	<div class="row">
		<h2>配送先登録</h2>
		<%= form_for(@address, url:public_addresses_path) do |f| %>
		<div class="field">
			<%= f.label :郵便番号（ハイフンなし） %>
			<%= f.text_field :zip_code, autofocus: true, autocomplete: "postal-code" %>
		</div>

		<div class="field">
			<%= f.label :住所 %>
			<%= f.text_field :address, autofocus: true, autocomplete: "street-address", size:"70" %>
		</div>

		<div class="field">
			<%= f.label :宛名 %>
			<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
		</div>
			<%= f.submit "登録する",class: "btn btn-success" %>
		<% end %>
	</div>

	<div class="row">
		<table class="table">
			<thead>
    			<tr>
					<th>郵便番号</th>
     				<th>住所</th>
     				<th>宛名</th>
      				<th colspan="3"></th>
    			</tr>
  			</thead>
			<tbody>
    			<% @addresses.each do |address| %>
      				<tr>
        				<td><%= address.zip_code %></td>
        				<td><%= address.address %></td>
        				<td><%= address.name %></td>
        				<td><%= link_to "編集する", edit_public_address_path(address), class: "btn btn-primary" %>
        					<%= link_to "削除する", public_address_path(address), method: :delete, class: "btn btn-danger" %>
        				</td>
        			</tr>
    			<% end %>
  			</tbody>
		</table>
	</div>
</div>