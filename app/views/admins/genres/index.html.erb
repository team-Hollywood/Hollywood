<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2>ジャンル一覧・追加</h2>
      <br><br>
      <%= form_for [:admins,@genre] do |f| %>
        <table class="table">
  		    <tbody>
            <tr>
              <td><h5>ジャンル</h5></td>
  				    <td><%= f.text_field :name %>
              <label><%= f.radio_button :is_valid, "true" %> 有効</label>
              <label><%= f.radio_button :is_valid, "false" %> 無効</label>
              <%= f.submit "追加", class: "btn btn-info" %>
  				    </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
        	<tr>
            <td><%= genre.name %></td>
          	<td><% if genre.is_valid== true %>有効
          			<% else %>無効
          			<% end %>
          	</td>
          	<td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
