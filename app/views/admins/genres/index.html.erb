<h2>ジャンル一覧・追加</h2>
<%= form_for [:admins,@genre] do |f| %>
	<table class="table">
		<tbody>
			<tr>
				<td><h4>ジャンル</h4></td>
				<td><%= f.text_field :name %>
					<label><%= f.radio_button :is_valid, "true" %> 有効</label>
					<label><%= f.radio_button :is_valid, "false" %> 無効</label>
					<%= f.submit "追加" %>
				</td>
			</tr>
		</tbody>
	</table>
<% end %>

<table class="table">
	<thead>
    	<tr>
			<th>ジャンル</th>
     		<th>状態</th>
      		<th colspan="3"></th>
    	</tr>
  	</thead>
	<tbody>
    	<% @genres.each do |genre| %>
      		<tr>
        		<td><%= genre.name %></td>
        		<td><% if genre.is_valid== true %>有効
        			<% else %>無効
        			<% end %>
        		</td>
        		<td><%= link_to "編集", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
        	</tr>
    	<% end %>
  	</tbody>
</table>