<h4><%= @customer.lastname %><%= @customer.firstname %>さんの会員情報編集</h4>


<%= form_for(@customer, url:admins_customer_path) do |f| %>

<% if @customer.errors.any? %>
  <h3><%= @customer.errors.count %>error occurrence</h3><!--エラーメッセ-->
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<table class="table">
  <thead>
  	<tr>
  		<th></th>
  		<th></th>
  		<th></th>
  	</tr>
  </thead>
  <tbody>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>

  	<tr>
  		<th><%= f.label :氏名 %></th>
  		<th><%= f.text_field :lastname, autofocus: true %></th>
  		<th><%= f.text_field :firstname, autofocus: true %></th>
  	</tr>

    <tr>
    	<th><%= f.label :フリガナ %></th>
    	<th><%= f.text_field :lastname_kana, autofocus: true %></th>
    	<th><%= f.text_field :firstname_kana, autofocus: true %></th>
    </tr>

    <tr>
    	<th><%= f.label :郵便番号 %></th>
    	<th colspan="2"><%= f.text_field :zip_code, autofocus: true %></th>
    </tr>

    <tr>
    	<th><%= f.label :住所 %></th>
    	<th colspan="2"><%= f.text_field :address, autofocus: true %></th>
    </tr>
    
    <tr>
    	<th><%= f.label :電話番号 %></th>
    	<th colspan="2"><%= f.text_field :phone, autofocus: true %></th>
    </tr>
    
    <tr>
    	<th><%= f.label :メールアドレス %></th>
    	<th colspan="2"><%= f.email_field :email, autofocus: true %></th>
    </tr>

    <tr>
    	<th><%= f.label :会員ステータス %></th>
    	<th>
          <label><%= f.radio_button :is_registered, "true" %> 有効</label>
          <label><%= f.radio_button :is_registered, "false" %> 退会済</label>
      </th>
    </tr>

  </tbody>
</table>

  <%= f.submit "変更を保存する", class: "btn btn-info" %>

<% end %>
