<div class="container">
	<div class="row">
    	<div class="col-xs-6">
			<h2><%= @customer.lastname %><%= @customer.firstname %>さんの会員詳細</h2>
		</div>
	</div>
	<br><br>

	<div class="row">
    	<div class="col-xs-6">
			<table class="table">
				<tr>
					<th>顧客ID</th>
					<th>
						<%= @customer.id %>
						<% if @customer.is_registered == true %>
						有効会員
						<% else %>
						退会済
						<% end %>
					</th>
				</tr>
				<tr>
					<th>氏名</th>
					<th><%= @customer.lastname %><%= @customer.firstname %></th>
				</tr>
				<tr>
					<th>フリガナ</th>
					<th><%= @customer.lastname_kana %><%= @customer.firstname_kana %></th>
				</tr>
				<tr>
					<th>郵便番号</th>
					<th><%= @customer.zip_code %></th>
				</tr>
				<tr>
					<th>住所</th>
					<th><%= @customer.address %></th>
				</tr>
				<tr>
					<th>電話番号</th>
					<th><%= @customer.phone %></th>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<th><%= @customer.email %></th>
				</tr>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6">
			<%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-primary" %>
			<%= link_to "注文履歴一覧を見る", admins_orders_path, class: "btn btn-primary" %>
		</div>
	</div>
</div>