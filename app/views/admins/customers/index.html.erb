<h4>会員一覧</h4>

<table class="table">
		<thead>
			<tr>
				<th>会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @customers.each do |customer| %>
			<tr>
				<td><%= customer.id %></td>
				<td>
					<%= link_to  admins_customer_path(customer) do %>
						<%= customer.lastname %><%= customer.firstname %>
					<% end %>
				</td>
				<td><%= customer.email %></td>
				<% if customer.is_registered == true %>
					<td>有効</td>
				<% else %>
					<td>退会済</td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
</table>