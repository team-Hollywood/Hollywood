<div class="container">
	<div class="row">
	<h2>注文履歴一覧</h2>
		<div class="col">
			<table class="table">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
				<% @orders.each do |order| %>
					<tr>
						<td><%= link_to order.created_at.strftime('%Y/%m/%d'), admins_order_path(order) %></td>
						<td><%= order.customer.lastname + order.customer.firstname %></td>
						<td><%= order.ordered_items.count %></td>
						<td><%= order.order_status %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>