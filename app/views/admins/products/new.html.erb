<div class="container">
<div class="row">
	<h1>商品新規登録</h1>
	<div class="col-xs-4">
		<%= form_for(@product, url: admins_products_path) do |f| %>
			<%= attachment_image_tag @product, :image, size:"300x200", format:'jpeg', fallback: "no_image.jpg" %>
			<%= f.attachment_field :image %>
	</div>
	<div class="col-xs-8">
			<label>商品名</label>
			<%= f.text_field :name %><br>

			<label>商品説明</label>
			<%= f.text_area :discription %><br>

			<label>ジャンル</label>
			<%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

			<label>表示価格</label>
			<%= f.number_field :tax_excluded_price %>円<br>

			<label>販売ステータス</label>
			<%= f.select :is_valid, [['販売中','true'],['販売中止','false']] %><br>

			<%= f.submit "新規登録" %>

		<% end %>
	</div>
</div>
</div>

